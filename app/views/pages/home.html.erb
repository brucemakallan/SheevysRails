<!-- THE HOME PAGE -->

<!-- WIDGET -->
<div class="links-widget">
	<%= link_to fa_icon("comment")+" Chat", "#feedback", title: "Live Chat" %><br>
	<%= link_to fa_icon("calendar")+" Book", "#booking-section", title: "Booking" %>
</div>

<!-- CAROUSEL -->
<div id="demo" class="carousel slide" data-ride="carousel">
	<!-- Indicators -->
	<ul class="carousel-indicators">
		<% @carousel_items.each do |image, image_attributes| %>		
			<li data-target="#demo" data-slide-to="<%= @carousel_items.find_index { |k,_| k== image }  %>"></li>
		<% end %>
	</ul>      
	<!-- The slideshow -->
	<div class="carousel-inner">
		<% @carousel_items.each do |image, image_attributes| %>		
			<div class="<%= image_attributes[:classes] %>">
	 			<%= image_tag image_attributes[:image_url], alt: "Carousel Image", width: 1100, height: 500 %>
	 			<div class="carousel-caption">
	 				<%= content_tag(:h2, image_attributes[:heading], class: "white") %>
	 				<%= content_tag(:h3, image_attributes[:subheading], class: "white") %>
	 			</div>
	 		</div>
	 	<% end %>
	</div>      
	<!-- Left and right controls -->
	<a class="carousel-control-prev" href="#demo" data-slide="prev">
		<span class="carousel-control-prev-icon"></span>
	</a>
	<a class="carousel-control-next" href="#demo" data-slide="next">
		<span class="carousel-control-next-icon"></span>
	</a>
</div>

                            
<!-- BOOKING -->
<div class="booking-heading" id="booking-section">
	Book Your Stay
</div>    

<div class="container-fluid booking-section">
	<div class="row form-row d-flex h-100">
		<div class="col-sm-6 body-card">
			<%= form_tag "home", name: "form1" do %>
				<div class="row">
					<div class="col-md-12">
						<div class="row">
							<!-- Check in -->
							<div class="col-md-4">
								<div class="form-group">
									<p class="form-headings">Check-in date:</p>
									<input type="date" class="form-control input-lg" name="checkin" id="checkin" required="required">
								</div>
							</div>
							<!-- Check out date -->
							<div class="col-md-4">
								<div class="form-group">
									<p class="form-headings">Check-out date:</p>
									<input type="date" class="form-control input-lg" name="checkout" id="checkout" required="required">
								</div>
							</div>
							<div class="col-md-4">
								<%= submit_tag 'Check Availability', class: "btn btn-4 btn-block" %>
							</div>			
						</div>
					</div> 
				</div>
			<% end %>
		</div>		
		
		<div class="col-sm-5 col-sm-offset-1 body-card payment-info">
			<p>&bull; Check-in: from 10am - 10pm</p>
			<p>&bull; Check-out: until 10pm</p>
			
			<p>&bull; <a data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">Payment Methods</a></p>
			<div class="collapse" id="collapseExample">
			  <div class="card card-body">
			    <ul style="font-size: 16px; line-height: 23px;">
			    	<li>Visa</li>
			    	<li>American Express</li>
			    	<li>Pay in local currency or dollars at the property</li>
			    </ul>
			  </div>
			</div>
		</div>		
	</div>
</div>

